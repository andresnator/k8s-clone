{
    // Visit https://aka.ms/tsconfig to read more about this file
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "tests"]
}